# Sample Service Environment Configuration

# Service port (externally exposed)
PORT=3000
EXTERNAL_PORT=3010

# Application settings
NODE_ENV=development

# Service Dependencies
SERVICE_REGISTRY_URL=http://service-registry:3000
IAM_URL=http://iam-service:3000
PUBSUB_EMULATOR_HOST=pubsub-emulator:8085
PUBSUB_PROJECT_ID=city-services

# Database Configuration
DB_HOST=sample-service-db
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=sample_service
DB_EXTERNAL_PORT=5432

# Firebase Admin SDK Configuration (optional)
# If provided, allows centralized configuration management
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@your-project.firebaseio.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/serviceAccount.json

# Team identifier (used to namespace config values)
# TEAM_ID=team-01

# Logging
LOG_LEVEL=info 